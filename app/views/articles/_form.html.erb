<%= simple_form_for @article, defaults: { input_html: { class: 'form-control' } }, input_html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :heading, wrapper_html: { class: 'form-group' } %>
  <%= f.input :url, wrapper_html: { class: 'form-group' } %>
  <%= f.input :description, :required => false, wrapper_html: { class: 'form-group' } %>
  <%= f.input :image, :required => false, wrapper_html: { class: 'form-group' } %>
  <%= f.input :excerpt, :required => false, wrapper_html: { class: 'form-group' } %>
  <%= f.input :date, :include_blank => true, :required => false, wrapper_html: { class: 'form-group' }, input_html: { class: '' } %>
  <%= f.submit "Add article" %>
<% end %>