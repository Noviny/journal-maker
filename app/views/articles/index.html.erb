<h1>Articles in our database</h1>
<div class="row">
  <div class="col-md-10">   
    <% if flash[:alert] %>
      <div class="alert"><%= flash[:alert] %></div>
    <% end %>
    <table class="table table-hover tablesorter tablesorter-bootstrap" id="allArticles">
      <thead>
        <tr>
          <td>Name</td>
          <td>Source</td>
          <td>url</td>
          <td>Edit</td>
          <td>Included in</td>
        </tr>
      </thead>
      <tbody>
        <% @articles.each do |a| %>
          <tr>
            <td><%= link_to( a.heading, article_path(a.id) ) %></td>
            <td><%= link_to( a.source.name, source_path(a.source) ) %></td>
            <td><%= link_to( a.url, a.url ) %></td>
            <td><%= link_to( 'Edit Details', edit_article_path(a.id) ) %></td>
          <td><%= pluralize(a.books.length, 'book') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
