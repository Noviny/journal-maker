<h1><%= @author.name %></h1>

<ul>
  <li>Job: <%= @author.job %></li>
  <li>Topics:</li>
  <li><%= link_to('Edit Details', edit_author_path(@author.id)) %></li>
  <li>All Articles</li>
  <ul>
    <% @author.articles.each do |a| %>
      <li><%= link_to(a.heading, a.url) %></li>
    <% end %>
  </ul>
</ul>