<h2>Index</h2>
  <% if @book.chapters.any? %>
    <div class="list-group">
      <% @book.chapters.each do |c| %>
        <div class="list-group-item list-group-item-info">
          <div class="row">
            <div class="col-md-8">
              <%= link_to(c.name, book_chapter_path(@book.id, c.id)) %>
            </div>
            <div class="col-md-4">
              <%= link_to( 'Delete Chapter' , book_chapter_path(@book, c), :method => :delete, :class => 'btn btn-danger' , :data => { :confirm => "Delete Chapter?"} ) %>
            </div>
          </div>

          <%= simple_form_for c, :url => "/books/#{@book.id}/#{c.id}", :method => :post, defaults: { input_html: { class: 'form-control' } }, input_html: { class: 'form-horizontal' } do |f|  %>
            <%= f.input :article_ids %>
            <%= f.submit "Reorder Articles" %>
          <% end %>



