        </div>
        <% if c.articles.any? %>
        <div class="list-group">
          <% c.articles.each do |a| %>
            <div class="list-group-item">
              <div class="row">
                <div class="col-md-9">
                  <%= a.id %>. <%= link_to(a.heading, a.url) %>
                </div>
                <div class="col-md-3">
                  <%= link_to('Remove', "/books/#{@book.id}/#{c.id}/#{a.id}", :method => :post, :class => 'btn btn-default' )  %>
                </div>
              </div>
            </div>
          <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>