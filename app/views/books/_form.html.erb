<div class="row">
  <div class="col-md-6">
<%= simple_form_for @book, defaults: { input_html: { class: 'form-control' } }, input_html: { class: 'form-horizontal' } do |f| %>
    <%= f.input :name %>
    <%= f.input :subheading %>
    <%= f.input :description %>
