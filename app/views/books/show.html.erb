<div class="row">
  <div class="col-md-4">
    <div class="page-header">
<h1><%= @book.name %>: <small><%= @book.subheading %></small></h1>
</div>
<blockquote>
<p><%= @book.description || 'This book has no description.' %></p>
</blockquote>

<% if @current_user.present? && (@book.user === @current_user) %>
  <p>Status: <%= @book.status || 'undefined' %> - Change the book's status or whatever options go here</p>
  <p><%= link_to('Edit Book', edit_book_path, :class => 'btn btn-default') %></p>
  <p><%= link_to( 'Delete Book' ,@book, :method => :delete, :class => 'btn btn-danger' , :data => { :confirm => "Burn the book?"} ) %></p>
<% elsif @current_user.present? %>
  <p>Some whatever about adding book to your bookshelf</p>
<% else %>
  <p>Not logged in whatever features</p>
<% end %>
</div>
<dv class="col-md-2"></dv>
<div class="col-md-4">
<h2>Index</h2>
  <% if @book.chapters.any? %>
    <div class="list-group">
      <% @book.chapters.each do |c| %>
        <%= link_to(c.name, book_chapter_path(@book.id, c.id), :class => 'list-group-item list-group-item-info' ) %>
        <% if c.articles.any? %>
        <div class="list-group">
          <% c.articles.each do |a| %>
              <%= link_to(a.heading, a.url, :class => 'list-group-item') %>
          <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>


  <h2>Unsorted Articles</h2>
    <% if @book.articles.any? %>
  <div class="list-group">
    <% @book.articles.each do |a| %>
      <%= link_to(a.heading, a.url, :class => 'list-group-item') %>
    <% end %>
    </div>
  <% else %>
    <p>No Articles in this book yet.</p>
  <% end %>




   <div class="col-md-6">
    <div class="input-group">
      <%= form_tag book_chapters_path(@book), :class => "form-inline" do %>
        <input type="text" class="form-control" name="name" placeholder="Add Chapter..." >
        <span class="input-group-btn">
          <input class="btn btn-default form-control" type="submit">Add</button>
        </span>
      <% end %>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->

  </div>
</div>