<!DOCTYPE html>
<html>
<head>
  <title>JournalMaker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <% if @current_user.present? %>
      <%= link_to("Logout #{ @current_user.name }", login_path, :method => :delete) %>
      <%= link_to("My Books", '/users/books') %>
      <%= link_to('Browse Articles', articles_path) %>
      <%= link_to('Browse Authors', authors_path) %>
      <%= link_to('Browse Sources', sources_path) %>
      <%= link_to('Add Articles', new_article_path) %>
    <% else %>
      <%= link_to('Log In', login_path) %>
      <%= link_to('Sign Up', new_user_path) %>
    <% end %>
    <%= link_to('All Books', books_path) %>
    <%= link_to('Create Book', new_book_path) %>
  </nav>

  <div>
    <%= yield %>
  </div>

  <footer>
    <p>Created by Benjamin 'Noviny' Conolly</p>
  </footer>
</body>
</html>
